{
  "name": "design-system",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/core/*",
    "packages/react/*",
    "packages/application-specific/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "storybook": "start-storybook -p 9009 --ci",
    "build-storybook": "build-storybook",
    "chromatic": "chromatic --project-token=e835547a77c4",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@storybook/addon-docs": "^6.4.13",
    "@storybook/addon-storysource": "^6.4.13",
    "@storybook/addons": "^6.4.13",
    "@storybook/components": "^6.4.14",
    "@storybook/react": "^6.4.13",
    "@storybook/theming": "^6.4.13",
    "@sui/react-icon": "*",
    "@sui/react-button": "*",
    "@sui/react-layout": "*",
    "@sui/react-spinner": "*",
    "@sui/react-stitches": "*",
    "@sui/react-utils": "*",
    "@sui/react-visually-hidden": "*",
    "@sui/utils": "*",
    "chromatic": "^6.4.1",
    "eslint": "7.32.0",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "turbo": "latest"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "outputs": [
          "dist/**",
          ".next/**"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "test": {
        "outputs": [
          "coverage/**"
        ],
        "dependsOn": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "clean": {
        "cache": false
      }
    }
  }
}
